{
	"name": "vscode-hana",
	"displayName": "SAP HANA IDE",
	"description": "Hana (Web) IDE editor in Visual Studio Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:hana.executeQuery",
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
				"id": "hana-explorer",
				"title": "HANA Explorer",
				"icon": "media/db.png"
				}
			]
		},
		"commands": [
			{
				"command": "hanaide.refreshDB",
				"title": "Hana: Refresh",
				"icon": {
					"light": "media/db.svg",
					"dark": "media/db.svg"
				}
			},
			{
				"command": "hanaide.edit",
				"title": "Hana: Open File to Edit"
			},
			{
				"command": "hana.executeQuery",
				"title": "Hana DB: Execute query"
			},
			{
				"command": "hanaide.createConnection",
				"title": "Hana DB: Create connection to instance"
			},
			{
				"command": "hanaide.useConnection",
				"title": "Hana DB: Select database connection"
			},
			{
				"command": "hanaide.deleteConnection",
				"title": "Hana DB: Delete all connections"
			}
		],
		"keybindings": [
			{
				"command": "hana.executeQuery",
				"key": "F8",
				"when": "editorLangId == sql"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "hana.executeQuery",
					"when": "editorLangId == sql",
					"group": "navigation"
				}
			]
		},
		"views": {
			"hana-explorer": [
				{
					"id": "hanadb",
					"name": "HANA IDE"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "HANA IDE",
			"properties": {
				"vscode-hana.maxTableCount": {
					"type": "integer",
					"default": 500,
					"description": "The maximum table count shown in the tree view"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"@sap/hana-client": "^2.4.139",
		"@types/request": "^2.48.1",
		"hdb": "^0.17.0",
		"keytar": "^4.10.0",
		"request": "^2.88.0"
	}
}