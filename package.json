{
	"name": "vscode-hana",
	"displayName": "SAP HANA IDE",
	"description": "Hana (Web) IDE editor in Visual Studio Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "hana-explorer",
					"title": "HANA Explorer",
					"icon": "media/db.svg"
				}
			]
		},
		"commands": [
			{
				"command": "hanaide.refresh",
				"title": "Refresh",
				"icon": {
					"light": "media/db.svg",
					"dark": "media/db.svg"
				},
				"category": "Hana DB"
			},
			{
				"command": "hanaide.edit",
				"title": "Open File to Edit",
				"category": "Hana IDE"
			},
			{
				"command": "hana.executeQuery",
				"title": "Execute query",
				"category": "Hana DB"
			},
			{
				"command": "hanadb.createSQLTextDocument",
				"title": "SELECT 1000",
				"category": "Hana DB"
			},
			{
				"command": "hanaide.openFile",
				"title": "Open File",
				"category": "Hana Editor"
			},
			{
				"command": "hanaide.createConnection",
				"title": "Create connection to instance",
				"category": "Hana DB",
				"icon": "media/create.svg"
			},
			{
				"command": "hanaide.filterTables",
				"title": "Filter tables to show only matching names",
				"category": "Hana DB"
			},
			{
				"command": "hanaide.useConnection",
				"title": "Connect to database",
				"category": "Hana DB"
			},
			{
				"command": "hanaide.deleteConnection",
				"title": "Delete database",
				"category": "Hana DB"
			}
		],
		"keybindings": [
			{
				"command": "hana.executeQuery",
				"key": "F8",
				"when": "editorLangId == sql"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "hana.executeQuery",
					"when": "editorLangId == sql",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "hanaide.useConnection",
					"when": "view == hanadb && viewItem == connection"
				},
				{
					"command": "hanaide.filterTables",
					"when": "view == hanadb && viewItem == database"
				},
				{
					"command": "hanadb.createSQLTextDocument",
					"when": "view == hanadb && viewItem == table"
				},
				{
					"command": "hanaide.refresh",
					"when": "(view == hanadb || view == hanaeditor) && viewItem"
				},
				{
					"command": "hanaide.deleteConnection",
					"when": "view == hanadb && viewItem == connection"
				},
				{
					"command": "hanaide.openFile",
					"when": "view == hanaeditor && viewItem == file",
					"group": "inline"
				}
			],
			"view/title": [
				{
					"command": "hanaide.refresh",
					"when": "view == hanadb"
				},
				{
					"command": "hanaide.createConnection",
					"when": "view == hanadb",
					"group": "navigation"
				}
			]
		},
		"views": {
			"hana-explorer": [
				{
					"id": "hanadb",
					"name": "Hana DB"
				},
				{
					"id": "hanaeditor",
					"name": "Hana Editor"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "HANA IDE",
			"properties": {
				"vscode-hana.maxTableCount": {
					"type": "integer",
					"default": 500,
					"description": "The maximum table count shown in the tree view"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"@types/request": "^2.48.1",
		"hdb": "^0.17.0",
		"keytar": "^4.11.0",
		"request": "^2.88.0"
	}
}
